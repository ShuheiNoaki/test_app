<%= form_with model: @product do |f| %>


<div>
  <%= f.label :name %><br/>
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label :description %><br/>
  <%= f.text_area :description, size: "100x10" %>
</div>

<div>
  <%= f.label :price %><br/>
  <%= f.text_field :price %>
</div>

<div>
  <%= f.label :image_name %><br/>
  <%= f.file_field :image_name %>
</div>

<br>
  <%= f.submit %>

<% end %>